<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TrackYourTasks.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TrackYourTasks"
    Title="TrackYourTasks">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent Title="Tasks" ContentTemplate="{DataTemplate local:ViewTasks}" />
    <ShellContent Title="Create" ContentTemplate="{DataTemplate local:CreateTasks}" />

</Shell>
