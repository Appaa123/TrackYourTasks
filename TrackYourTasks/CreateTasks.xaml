<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TrackYourTasks.CreateTasks">

	<VerticalStackLayout Padding="20">
		<Entry x:Name="TitleEntry" Placeholder="Task Title"/>
		<Editor x:Name="DescEntry" Placeholder="Task Description"/>
        <Button x:Name="AddTaskButton" Text="Add Task" Clicked="OnAddTaskClicked"/>

		<CollectionView x:Name="TasksList">
			<CollectionView.ItemTemplate>
				<DataTemplate>
					<Border Stroke="Gray" StrokeThickness="1" Margin="5" Padding="10">
						<VerticalStackLayout>
							<Label Text="{Binding Title}" FontAttributes="Bold"/>
							<Label Text="{Binding Description}" FontSize="Small"/>
							<Label Text="{Binding CreatedAt, StringFormat='{0:dd MMM yyyy}'}"/>
						</VerticalStackLayout>
					</Border>
				</DataTemplate>
			</CollectionView.ItemTemplate>
		</CollectionView>
	</VerticalStackLayout>
</ContentPage>
